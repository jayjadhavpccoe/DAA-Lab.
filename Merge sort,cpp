#include <iostream>
using namespace std;

void mergeSort(int arr[], int start, int mid, int end) {
    int i = start;
    int j = mid + 1;
    int size = end - start + 1;
    int* temp = new int[size];
    int idx = 0;

    while (i <= mid && j <= end) {
        if (arr[i] <= arr[j]) {
            temp[idx++] = arr[i++];
        } else {
            temp[idx++] = arr[j++];
        }
    }

    while (i <= mid) {
        temp[idx++] = arr[i++];
    }

    while (j <= end) {
        temp[idx++] = arr[j++];
    }

    // Copy back to original array
    for (int k = 0; k < size; k++) {
        arr[start + k] = temp[k];
    }

    delete[] temp;
}

void merge(int arr[], int start, int end) {
    if (start < end) {
        int mid = start + (end - start) / 2;
        merge(arr, start, mid);
        merge(arr, mid + 1, end);
        mergeSort(arr, start, mid, end);
    }
}

void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
    int arr[] = {5, 2, 6, 4, 1, 3};
    int n = sizeof(arr) / sizeof(arr[0]);

    merge(arr, 0, n - 1);
    printArray(arr, n);

    return 0;
}
